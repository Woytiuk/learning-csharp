<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CalcAvalonia.MainWindow"
        Title="CalcAvalonia"
        CanResize="False">
        <Grid RowDefinitions="Auto,*" Margin="12">
        <TextBox x:Name="Display" 
        Grid.Row="0"
        FontSize="32"  
        IsReadOnly="True" 
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Top" 
        HorrizontalContentAlignment="Right"
        Text="0" 
        Margin="0,0,0,12" />
        <Grid Grid.Row="1" Margin="0,12,0,0"
        RowDefinitions="*,*,*,*,*"
        ColumnDefinitions="*,*,*,*">

            <Button Content="7" Grid.Row="0" Grid.Column="0" FontSize="24" Click="OnButtonClick"/>
            <Button Content="8" Grid.Row="0" Grid.Column="1" FontSize="24" Click="OnButtonClick"/>
            <Button Content="9" Grid.Row="0" Grid.Column="2" FontSize="24" Click="OnButtonClick"/>
            <Button Content="/" Grid.Row="0" Grid.Column="3" FontSize="24" Click="OnButtonClick"/>

            <Button Content="4" Grid.Row="1" Grid.Column="0" FontSize="24" Click="OnButtonClick"/>
            <Button Content="5" Grid.Row="1" Grid.Column="1" FontSize="24" Click="OnButtonClick"/>
            <Button Content="6" Grid.Row="1" Grid.Column="2" FontSize="24" Click="OnButtonClick"/>
            <Button Content="*" Grid.Row="1" Grid.Column="3" FontSize="24" Click="OnButtonClick"/>

            <Button Content="1" Grid.Row="2" Grid.Column="0" FontSize="24" Click="OnButtonClick"/>
            <Button Content="2" Grid.Row="2" Grid.Column="1" FontSize="24" Click="OnButtonClick"/>
            <Button Content="3" Grid.Row="2" Grid.Column="2" FontSize="24" Click="OnButtonClick"/>
            <Button Content="-" Grid.Row="2" Grid.Column="3" FontSize="24" Click="OnButtonClick"/>

            <Button Content="0" Grid.Row="3" Grid.Column="0" FontSize="24" Click="OnButtonClick"/>
            <Button Content="." Grid.Row="3" Grid.Column="1" FontSize="24" Click="OnButtonClick"/>
            <Button Content="C" Grid.Row="3" Grid.Column="2" FontSize="24" Click="OnClearClick"/>
            <Button Content="+" Grid.Row="3" Grid.Column="3" FontSize="24" Click="OnButtonClick"/>

            <Button Content="="/Grid.Row="4"/Grid.ColumnSpan="4" FontSize="24" Click="OnEqualsClick"/>
        </Grid>
    </Grid>
</Window>
